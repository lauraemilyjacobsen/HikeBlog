@model IEnumerable<HikeBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Croatia")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.IsPublished);
		</td>
        <td>
            @Html.ActionLink("Edit", "Egypt", new { id=item.ID }) |
            @Html.ActionLink("Details", "Denmark", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Djibouti", new { id=item.ID })
        </td>
    </tr>
}

</table>
